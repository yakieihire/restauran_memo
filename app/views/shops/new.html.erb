<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <div class="logo_t">
        <%= link_to image_tag("logo_transparent.png", class: :logo_y), root_path %>
      </div>
    <%= form_with model: @shop, url:shops_path, local: true do |f|%>
      <div class="field">
        <%= f.label :image, "お店の画像" %><br />
        <%= f.file_field :image, id:"shop_image" %>
      </div>

      <div class="field">
        <%= f.label :store_name, "お店の名前" %><br />
        <%= f.text_field :store_name, id:"shop_name" %>
      </div>

      <div class="weight-bold-text">
          ジャンル
      </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"shop-category"}) %>

      <div class="field">
        <%= f.label :menu, "メニュー" %><br />
        <%= f.text_field :menu, class: :form__text, id:"shop_menu" %>
      </div>

      <div class="field">
        <%= f.label :place, "場所" %><br />
        <%= f.text_field :place, id:"shop_place" %>
      </div>

      <div class="field">
        <%= f.label :store_url, "お店のURL" %><br />
        <%= f.text_field :store_url, class: :form__text, id:"shop_url" %>
      </div>

      <div class="field">
        <%= f.label :memo, "メモ" %><br />
        <%= f.text_area :memo, class: :form__text, id:"shop_memo" %>
      </div>


      <div class="weight-bold-text">
          気になるお店に登録
        </div>
        <%= f.collection_select(:interesting_store_id, InterestingStore.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>

      <div class="actions">
        <%= f.submit "保存する", class: :form__btn  %>
      </div>
    <% end %>
    </div>
  </div>
</div>