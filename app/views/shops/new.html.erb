<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <div class="logo_t">
        <%= link_to image_tag("logo_transparent.png", class: :logo_y), root_path %>
      </div>
    <%= form_with model: @shops, local: true do |f|%>
      <div class="field">
        <%= f.label :hoge, "お店の画像" %><br />
        <%= f.file_field :hoge, id:"shop_image" %>
      </div>

      <div class="field">
        <%= f.label :hoge, "お店の名前" %><br />
        <%= f.text_field :hoge, id:"prototype_title" %>
      </div>

      <div class="weight-bold-text">
          ジャンル
      </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"shop-category"}) %>

      <div class="field">
        <%= f.label :hoge, "メニュー" %><br />
        <%= f.text_field :hoge, class: :form__text, id:"prototype_catch_copy" %>
      </div>

      <div class="field">
        <%= f.label :hoge, "場所" %><br />
        <%= f.text_field :hoge, id:"prototype_concept" %>
      </div>

      <div class="field">
        <%= f.label :hoge, "値段" %><br />
        <%= f.text_field :hoge, class: :form__text, id:"prototype_concept" %>
      </div>

      <div class="field">
        <%= f.label :hoge, "お店のURL" %><br />
        <%= f.text_field :hoge, class: :form__text, id:"prototype_concept" %>
      </div>

      <div class="field">
        <%= f.label :hoge, "メモ" %><br />
        <%= f.text_area :hoge, class: :form__text, id:"prototype_concept" %>
      </div>


      <div class="weight-bold-text">
          気になるお店に登録
        </div>
        <%= f.collection_select(:interesting_store_id, InterestingStore.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>

      <div class="actions">
        <%= f.submit "保存する", class: :form__btn  %>
      </div>
    <% end %>
    </div>
  </div>
</div>